{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-12">
        <div class="card mb-6">
            {% block content %}
                <div class="container container-fluid">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                {% block title %}Upload the CSV file{% endblock %}
                            </div>
                            {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                                <div class="form-group">
                                    {{ form_widget(form.send, {'label': "Upload", 'attr' : { 'class': 'btn btn-primary' }}) }}
                                    {{ form_label(form.upload_file) }}
                                    {{ form_widget(form.upload_file) }}
                                    {{ form_errors(form.upload_file) }}
                                </div>
                                {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
    <div class="col-lg-12">
        <br>
    </div>
{% endblock %}
