{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-12">
        <div class="card mb-6">
            {% block content %}
                <div class="container container-fluid">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                {% block title %}Calculator{% endblock %}
                            </div>
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.vat_number) }}
                                {{ form_widget(form.vat_number) }}
                                {{ form_errors(form.vat_number) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.currencies) }}
                                {{ form_widget(form.currencies) }}
                                {{ form_errors(form.currencies) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.invoice_type) }}
                                {{ form_widget(form.invoice_type) }}
                                {{ form_errors(form.invoice_type) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.submit, {'label': "Submit", 'attr' : { 'class': 'btn btn-primary' }}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <div class="col-lg-8">
                            <table>
                            {% if documents is not empty %}
                                <tr>
                                    <th>Customer</th>
                                    <th>Total</th>
                                </tr>
                            {% endif %}
                            {% for document in documents %}
                                <tr>
                                <td>{{ document.customer }}</td>
                                <td>{{ document.total }}</td>
                                </tr>
                            {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
    <div class="col-lg-12">
        <br>
    </div>
{% endblock %}
